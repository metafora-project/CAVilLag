<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>nodeservice</servlet-name>
    <servlet-class>de.kuei.metafora.server.NodeServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>nodeservice</servlet-name>
    <url-pattern>/cavillag/nodeservice</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>CAVilLag.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>startup_servlet</servlet-name>
 	<servlet-class>de.kuei.metafora.server.StartupServlet</servlet-class>
 	<load-on-startup>3</load-on-startup>
  </servlet>


</web-app>
